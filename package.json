{
  "name": "angularfire-lite",
  "version": "6.0.2",
  "license": "Apache-2.0",
  "description": "Lightweight library to use Firebase API with Angular.",
  "author": "Hamed Baatour <hamedbaatour@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hamedbaatour/angularfire-lite"
  },
  "watch": {
    "local:build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "legacyWatch": true,
      "delay": 0,
      "quiet": true
    }
  },
  "scripts": {
    "build": "ng-packagr",
    "local:build": "ng-packagr && cd angularfire-lite && npm pack && cd .. && npm run copy",
    "watch": "npm-watch",
    "copy": " copyfiles angularfire-lite/**/*.* ../angularfire-lite-demo/node_modules"
  },
  "private": false,
  "peerDependencies": {
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "core-js": "^2.5.4",
    "firebase": "^5.4.2",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/core": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "core-js": "^2.5.4",
    "firebase": "^5.4.2",
    "ng-packagr": "^4.1.1",
    "npm-watch": "^0.5.0",
    "rxjs": "^6.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2",
    "zone.js": "^0.8.26",
    "copyfiles": "^2.1.0"
  }
}
